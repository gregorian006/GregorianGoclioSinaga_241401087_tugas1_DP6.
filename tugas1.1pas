program Genap;
uses crt;
var
  N, i, jumlah: integer;
begin
clrscr;
  write('Masukkan bilangan bulat positif : '); // memasukkan bilangan positif
  readln(N);

  for i := 2 to N do // Mulai dari 2 karena bilangan genap terkecil adalah 2
    begin

        if i mod 2 = 0 then // Cek apakah i adalah bilangan genap
        jumlah := jumlah + i;
        
    end;

  writeln('Jumlah bilangan genap dari 1 hingga ', N, ' adalah ', jumlah);
  readln;
end.